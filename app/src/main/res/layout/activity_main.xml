<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="2"
    tools:context="com.example.uu119632.activitycallbacktutorial.MainActivity">

    <Button
        android:id="@+id/activity_result_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_activity_result"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/key_down_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_key_down"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/on_touch_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_touch_event"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/window_focus_changed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_window_focus_changed"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>
